<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="554.0" prefWidth="793.0" style="-fx-background-color: linear-gradient(to right bottom, #05071F,#5ba5f0);" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AjouterEtudiantController">
    <VBox alignment="CENTER" layoutX="175.0" layoutY="55.0" prefHeight="400.0" prefWidth="500.0" spacing="10.0">
        <Label text="Ajouter un étudiant" textFill="#f8efef">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
         <font>
            <Font name="Bradley Hand ITC" size="22.0" />
         </font></Label>

        <TextField fx:id="nomField" promptText="Nom">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></TextField>
        <TextField fx:id="prenomField" promptText="Prénom">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></TextField>
        <TextField fx:id="cneField" promptText="CNE">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></TextField>
        <TextField fx:id="passwordField" promptText="Mot de passe">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></TextField>
        <TextField fx:id="dateField" promptText="Date Naissance">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></TextField>
        <TextField fx:id="telephoneField" promptText="Numéro de téléphone">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></TextField>
        <TextField fx:id="villeField" promptText="Ville" />

        <Button onAction="#enregistrerEtudiant" text="Enregistrer" />
      <padding>
         <Insets bottom="10.0" />
      </padding>
    </VBox>
</AnchorPane>
